@model FinancialPortal.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@{
    Layout = "";
}

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta name="description" content="">
<meta name="author" content="">

<title>Ira's Financial Portals - Register</title>

<!-- Custom fonts for this template-->
<link href="~/Content/all.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

<!-- Custom styles for this template-->
<link href="~/Content/sb-admin-2.min.css" rel="stylesheet" />
<style>
    #inputAvatarPath {
        width: 0.1px;
        height: 0.1px;
        opacity: 0;
        overflow: hidden;
        position: absolute;
        z-index: -1;
    }

    #inputAvatarPath + label {
            cursor: pointer; /* "hand" cursor */
    }
</style>
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post,
                            new
                            {
                                @class = "user",
                                role = "form",
                                enctype = "multipart/form-data"
                            }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.TextBoxFor(m => m.FirstName, new
                                    {
                                        @class = "form-control form-control-user",
                                        placeholder = "First Name",
                                        type = "text",
                                        id = "exampleFirstName"
                                    })
                                </div>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.LastName, new
                                    {
                                        @class = "form-control form-control-user",
                                        placeholder = "Last Name",
                                        type = "text",
                                        id = "exampleInputLastName"
                                    })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.DisplayName, new
                                {
                                    @class = "form-control form-control-user",
                                    placeholder = "Display Name",
                                    type = "text",
                                    id = "exampleInputDisplayName"
                                })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new
                                {
                                    @class = "form-control form-control-user",
                                    placeholder = "Email Address",
                                    type = "email",
                                    id = "exampleInputEmail"
                                })
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.TextBoxFor(m => m.Password, new
                                    {
                                        @class = "form-control form-control-user",
                                        placeholder = "Password",
                                        type = "password",
                                        id = "exampleInputPassword"
                                    })
                                </div>
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new
                                    {
                                        @class = "form-control form-control-user",
                                        placeholder = "Confirm Password",
                                        type = "password",
                                        id = "exampleInputConfirmPassword"
                                    })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.AvatarPath, new
                                {
                                    @class = "form-control form-control-user",
                                    placeholder = "Avatar Path",
                                    type = "file",
                                    id = "inputAvatarPath"
                                })
                                <label for="inputAvatarPath" class="btn btn-info btn-user btn-block">Profile Picture</label>
                            </div>
                            <input type="submit" class="btn btn-primary btn-user btn-block" value="Register Account" />
                        }

                        <div class="text-center">
                            <a class="small" href="@Url.Action("ForgotPassword", "Account")">Forgot Password?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="@Url.Action("Login", "Account")">Already have an account? Login!?</a>
                        </div>
                    </div>
                </div>
            </div> <!-- End row div -->
        </div> <!-- End card-body div -->
    </div> <!-- End card div -->
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

