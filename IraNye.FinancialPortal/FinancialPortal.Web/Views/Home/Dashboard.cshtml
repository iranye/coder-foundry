            </div>
        </div>
    </div>
</div>

<div class="row">
    
    <div class="col-xl-8 col-lg-7">

        <!-- Transactions Bar Chart -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Transaction vs Budget Amounts</h6>
            </div>
            <div class="card-body">
                <div class="chart-bar">
                    <canvas id="barChartTransactions"></canvas>
                </div>
            </div>
            <div>
                <button id="getBarChartDataTransactions">Refresh</button>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/Chart.js"></script>

@section scripts
{
    <script>
        $(document).ready(function () {
            console.log("READY!");
            
            buildTransactionsChart();

            $("#getDemoBarChartData").click(function () {
                console.log("Getting DemoBarChartData!");
            });

            $("#getBarChartDataTransactions").click(function() {
                console.log("Getting BarChartData!");
                buildTransactionsChart();
            });
            
            //TicketYpeLiquidChart
            function buildTransactionsChart() {
                // ajaxForTransactionsChart('@Url.Action("BarChartData", "Charts")');
                ajaxForbarChartTransactions('@Url.Action("BarChartData", "Charts")');
            }
            
            function ajaxForbarChartTransactions(dataUrl) {
                $.ajax({
                    url: dataUrl,
                    type: "post",
                    dataType: "json",
                    success: function (response) {
                        // fillbarChartTransactionsTest(response);
                        fillbarChartTransactions(response);
                    }
                });
            }
            
            function fillbarChartTransactions(data) {
                var ctx = document.getElementById("barChartTransactions");
                if (ctx === null) {
                    console.log("id to canvas element is NULL");
                    return;
                }
                var barChartTransactions = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: data.labels,
                        datasets: [{
                                label: "Total Spent",
                                backgroundColor: "#4e73df",
                                hoverBackgroundColor: "#2e59d9",
                                borderColor: "#4e73df",
                                data: data.values
                            },
                            {
                                label: "Budget",
                                backgroundColor: "#1cc88a",
                                hoverBackgroundColor: "#2cd89a",
                                borderColor: "#1cc88a",
                                data: data.values
                            }
                        ],
                    },
                    options: {
                        maintainAspectRatio: false,
                        layout: {
                            padding: {
                                left: 10,
                                right: 25,
                                top: 25,
                                bottom: 0
                            }
                        },
                        scales: {
                            xAxes: [{
                                time: {
                                    unit: 'month'
                                },
                                gridLines: {
                                    display: false,
                                    drawBorder: false
                                },
                                ticks: {
                                    maxTicksLimit: 6
                                },
                                maxBarThickness: 25,
                            }],
                            yAxes: [{
                                ticks: {
                                    min: 0,
                                    max: 2000,
                                    maxTicksLimit: 5,
                                    padding: 10,
                                    // Include a dollar sign in the ticks
                                    callback: function(value, index, values) {
                                        return '$' + number_format(value);
                                    }
                                },
                                gridLines: {
                                    color: "rgb(234, 236, 244)",
                                    zeroLineColor: "rgb(234, 236, 244)",
                                    drawBorder: false,
                                    borderDash: [2],
                                    zeroLineBorderDash: [2]
                                }
                            }],
                        },
                        legend: {
                            display: false
                        },
                        tooltips: {
                            titleMarginBottom: 10,
                            titleFontColor: '#6e707e',
                            titleFontSize: 14,
                            backgroundColor: "rgb(255,255,255)",
                            bodyFontColor: "#858796",
                            borderColor: '#dddfeb',
                            borderWidth: 1,
                            xPadding: 15,
                            yPadding: 15,
                            displayColors: false,
                            caretPadding: 10,
                            callbacks: {
                                label: function(tooltipItem, chart) {
                                    var datasetLabel = chart.datasets[tooltipItem.datasetIndex].label || '';
                                    return datasetLabel + ': $' + number_format(tooltipItem.yLabel);
                                }
                            }
                        },
                    }
                });

                $.each(data.labels,
                    function(index, obj) {
                        console.log("index: " + index);
                        console.log("obj.label: " + obj);
                    });
            }
            
            function fillbarChartTransactionsTest(data) {
                $.each(data.labels,
                    function(index, obj) {
                        console.log("index: " + index);
                        console.log("obj.label: " + obj);
                    });
            }
            
            function ajaxForTransactionsChart(dataUrl) {
                console.log("dataUrl: " + dataUrl);
                $.ajax({
                    url: dataUrl,
                    type: "post",
                    dataType: "json",
                    success: function (response) {
                        fillChart(response);
                    }
                });
            }
            
            function fillChart(data) {
                $.each(data,
                    function(index, obj) {
                        console.log("index: " + index);
                        console.log("obj.label: " + obj.label);
                        console.log("obj.value: " + obj.value);
                    });
            }

        });


    </script>
}