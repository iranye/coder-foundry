@model FinancialPortal.Web.ViewModels.MainDashboardViewModel

@{
    ViewBag.Title = "Home Dashboard";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard - @Model.HouseholdName</h1>
    @*<a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>*@
</div>

<!-- Content Row -->
<div class="row">

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Budgets</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalBudgets</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-book-open fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Budget Items</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalBudgetItems</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Invitations</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalInvitations</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-sticky-note fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Bank Accounts</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalBankAccounts</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-piggy-bank fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Transactions</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalTransactions</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    
    <div class="col-xl-8 col-lg-7">

        <!-- Area Chart -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Area Chart</h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="myAreaChart"></canvas>
                </div>
                <hr>
                Styling for the area chart can be found in the <code>/js/demo/chart-area-demo.js</code> file.
            </div>
        </div>

        <!-- Donut Chart -->
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Donut Chart</h6>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="chart-pie pt-4">
                    <canvas id="myPieChart"></canvas>
                </div>
                <hr>
                Styling for the donut chart can be found in the <code>/js/demo/chart-pie-demo.js</code> file.
            </div>
        </div>

        <!-- Bar Chart -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Transaction Amounts</h6>
            </div>
            <div class="card-body">
                <div class="chart-bar">
                    <canvas id="myBarChart"></canvas>
                </div>
                <hr>
                Styling for the bar chart can be found in the <code>/js/demo/chart-bar-demo.js</code> file.
            </div>
            <div>
                <button id="getDemoBarChartData">GetBarChartData</button>
            </div>
        </div>

        <!-- Transactions Bar Chart -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Transaction Amounts</h6>
            </div>
            <div class="card-body">
                <div class="chart-bar">
                    <canvas id="transactionBarChart"></canvas>
                </div>
                <hr>
                Styling for the bar chart can be found in the <code>/js/demo/chart-bar-demo.js</code> file.
            </div>
            <div>
                <button id="getTransactionBarChartData">GetBarChartData</button>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/Chart.js"></script>

@section scripts
{
    <script>
        $(function() {

        });

        $(document).ready(function () {
            console.log("READY!");

            $("#getDemoBarChartData").click(function() {
                console.log("Getting DemoBarChartData!");
            });

            $("#getTransactionBarChartData").click(function() {
                console.log("Getting BarChartData!");
                buildTransactionsChart();
            });
            
            //TicketYpeLiquidChart
            function buildTransactionsChart() {
                ajaxForTransactionsChart('@Url.Action("BarChartData", "Charts")');
            }

            function ajaxForTransactionsChart(dataUrl) {
                console.log("dataUrl: " + dataUrl);
                $.ajax({
                    url: dataUrl,
                    type: "post",
                    dataType: "json",
                    success: function (response) {
                        fillChart(response);
                    }
                });
            }

            function fillChart(data) {
                $.each(data,
                    function(index, obj) {
                        console.log("index: " + index);
                        console.log("obj.label: " + obj.label);
                        console.log("obj.value: " + obj.value);
                    });
            }
        });

    </script>
}