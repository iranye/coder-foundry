@model IEnumerable<FinancialPortal.Web.Models.Household>

@{
    ViewBag.Title = "Index";
}

<div class="col-lg-6 mb-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Households</h6>
        </div>
        <div class="card-body">
            @if (!@ViewBag.UserIsHouseholdMember)
            {
                <div class="h3">
                    Welcome to My Financial Portal!
                </div>
                <div>
                    <p>This application is intended to allow someone to manage Finances and Budgets for their Household.</p>
                    <p>
                        To Get Started, click "Create New Household". Once your Household is created, you'll need to add at least One each of the following prior to entering in Transactions or Expenses:
                        <ul>
                            <li>Bank Account</li>
                            <li>Budget</li>
                            <li>Budget Category</li>
                        </ul>
                    </p>

                    <p>From the Household Dashboard, You'll also be able to invite Members to your Household via Email.</p>

                    <p><strong>Thanks and Have Fun!</strong></p>

                </div>
                <br />
                <p>
                    @Html.ActionLink("Create New Household", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
                </p>
                <br />
            }
            
            <p>
                Here is the current list of Households:
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Greeting)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th></th>
                    }
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Greeting)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                                @Html.ActionLink("Dashboard", "Dashboard", new { id = item.Id })
                            </td>
                        }

                    </tr>
                }

            </table>

        </div> <!-- end card-body -->
    </div>
</div>


